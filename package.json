{
  "name": "@suzumiyaaoba/voicevox-client",
  "version": "0.1.0",
  "description": "TypeScript client library for VOICEVOX ENGINE OSS. Auto-generated from OpenAPI schema using Orval.",
  "homepage": "https://github.com/SuzumiyaAoba/voicevox-client",
  "bugs": {
    "url": "https://github.com/SuzumiyaAoba/voicevox-client/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SuzumiyaAoba/voicevox-client.git"
  },
  "author": {
    "name": "SuzumiyaAoba",
    "url": "https://github.com/SuzumiyaAoba"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/SuzumiyaAoba"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "private": false,
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc --project tsconfig.build.json",
    "build:dual": "npm run build && npm run build:cjs",
    "build:cjs": "tsc --project tsconfig.build.json --module commonjs --outDir dist-cjs && mv dist-cjs/index.js dist/index.cjs",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "generate": "orval --config ./orval.config.ts",
    "format": "npx @biomejs/biome check --write .",
    "check": "npx @biomejs/biome check .",
    "fix": "npm run format",
    "update-schema": "curl -s -o api-schema/openapi.json http://localhost:50021/openapi.json && echo 'OpenAPI schema updated from local server' && npm run generate",
    "voicevox:start": "docker-compose up -d voicevox",
    "voicevox:stop": "docker-compose down",
    "voicevox:logs": "docker-compose logs -f voicevox",
    "prepublishOnly": "npm run generate && npm run test:run && npm run build:dual",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@tsconfig/strictest": "^2.0.6",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "nodemon": "^3.1.7",
    "orval": "^7.12.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "@biomejs/cli-linux-x64": "^2.2.4"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "keywords": [
    "voicevox",
    "voice-synthesis",
    "tts",
    "text-to-speech",
    "api-client",
    "typescript",
    "openapi",
    "orval",
    "audio",
    "speech",
    "japanese",
    "voicevox-engine"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npx @biomejs/biome check --write --no-errors-on-unmatched"
    ],
    "*.{json,md}": [
      "npx @biomejs/biome format --write --no-errors-on-unmatched"
    ]
  }
}
